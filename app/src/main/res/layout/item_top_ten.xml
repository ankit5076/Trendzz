<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_plan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:elevation="5dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:id="@+id/vertical_divider"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/song_name"
                android:layout_toEndOf="@id/vertical_divider"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="serif"
                tools:text="Swag Se Swagat Song"
                android:textColor="#212121"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/movie_name"
                android:layout_below="@id/song_name"
                android:layout_toEndOf="@id/vertical_divider"
                android:layout_toStartOf="@id/view_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_alignParentBottom="true"
                android:paddingTop="2dp"
                android:fontFamily="serif"
                tools:text="Tiger Zinda Hai"
                android:textColor="#212121"
                android:textSize="18sp" />
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/view_image"
                android:layout_toStartOf="@id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song_name"
                app:srcCompat="@drawable/ic_view_48dp"
                />
            <TextView
                android:id="@+id/views"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                tools:text="422 Million"
                android:textColor="#212121"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
