<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.trends.trending.MainActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/video_image"
        android:layout_width="74dp"
        android:layout_height="82dp"
        android:layout_marginStart="@dimen/view_default_margin"
        android:layout_marginTop="@dimen/view_default_margin"
        android:layout_marginBottom="@dimen/view_default_margin"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorAccent"
        app:srcCompat="@drawable/carryminati" />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_default_margin"
        android:layout_marginTop="@dimen/view_default_margin"
        android:ellipsize="end"
        android:layout_alignTop="@id/video_image"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_toEndOf="@id/video_image"
        tools:text="Channel Title" />

    <TextView
        android:id="@+id/video_channel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/video_image"
        android:layout_below="@id/video_title"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/view_default_margin"
        tools:text="TextView"/>

</RelativeLayout>
